<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.cbsa.riley.ace">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera" android:required="true" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.AppCompat.Light.ActionBar">

        <provider
                android:name="android.support.v4.content.FileProvider"
                android:authorities="com.example.android.fileprovider"
                android:exported="false"
                android:grantUriPermissions="true">
            <meta-data
                    android:name="android.support.FILE_PROVIDER_PATHS"
                    android:resource="@xml/file_paths"></meta-data>
        </provider>

        <activity
                android:name=".MainActivity"
                android:label="@string/app_name"
                android:theme="@style/MyTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".searchPage"
                android:label="@string/Search"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>
        <activity
                android:name=".SearchResultsPage"
                android:label="@string/Search"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>
        <activity
                android:name=".PrivacyPolicyEN"
                android:label="@string/PrivacyPolicyEN"
                android:theme="@style/Theme.AppCompat.Light.ActionBar">
        </activity>
        <activity
                android:name=".SettingsPage"
                android:label="@string/Settings"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>
        <activity
                android:name=".ImageViewPage"
                android:label="@string/CarDetail"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar"
                android:parentActivityName="com.cbsa.riley.ace.searchPage" >
        </activity>
        <activity
                android:name=".AddHotspotPage"
                android:label="@string/AddHotspot"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>
        <activity
                android:name=".HotspotDetails"
                android:label="@string/HotspotDetails"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>
        <activity
                android:name=".ViewHotspotDetails"
                android:label="@string/HotspotDetails"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>
        <activity
                android:name=".ListViewPage"
                android:label="@string/ListView"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>
    </application>

</manifest>