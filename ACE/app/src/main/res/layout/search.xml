<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >


    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" android:id="@+id/makeSpinner" android:layout_marginTop="55dp"
            android:textColor="@android:color/white" android:background="@android:color/white"
            android:height="75dp"/>

    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/modelSpinner" android:layout_marginTop="35dp"
            android:background="@android:color/white"
            android:height="75dp" android:layout_below="@id/makeSpinner"/>

    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:id="@+id/yearSpinner" android:layout_marginTop="35dp"
            android:background="@android:color/white"
            android:height="75dp" android:layout_below="@id/modelSpinner"/>

    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" android:id="@+id/trimSpinner" android:layout_marginTop="35dp"
            android:background="@android:color/white"
            android:height="75dp" android:layout_below="@id/yearSpinner"/>

    <Button android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/searchBttn"
            android:text="@string/Search" android:enabled="false" android:background="@android:color/white"
            android:layout_alignParentBottom="true" android:layout_marginBottom="45dp" android:textColor="@android:color/black"
            />


</RelativeLayout>